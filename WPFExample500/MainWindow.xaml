<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFExample500"
        xmlns:ViewModels="clr-namespace:WPFExample500.ViewModels" xmlns:Models="clr-namespace:WPFExample500.Models" x:Class="WPFExample500.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">


        <Grid Margin="20">
            <Rectangle >
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" >
                        <GradientStop Color="Violet" Offset="0" />
                        <GradientStop Color="DarkViolet" Offset="1.0" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Grid Height="100" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Style="{StaticResource RoundCorner}" Content="Front Page" Click="BtnClickP0">
                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                        </Button.BitmapEffect>
                    </Button>
                    <Button Style="{StaticResource RoundCorner}" Content="Search" Click="BtnClickP1">
                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                        </Button.BitmapEffect>
                    </Button>
                    <Button Style="{StaticResource RoundCorner}" Content="Messages" Click="BtnClickP2" >
                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                        </Button.BitmapEffect>
                    </Button>
                    <Button Style="{StaticResource RoundCorner}" Content="Profile" Click="BtnClickP3">
                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                        </Button.BitmapEffect>
                    </Button>
                    <Button Style="{StaticResource RoundCorner}" Content="Login" Click="BtnClickP4">
                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                        </Button.BitmapEffect>
                    </Button>
                    <Button Style="{StaticResource RoundCorner}" Content="Quit" Click="BtnClickP5">
                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                        </Button.BitmapEffect>
                    </Button>

                </StackPanel>

            </Grid>
            <Frame x:Name="Main" Margin="20 100 20 20" NavigationUIVisibility="Hidden"/>

        </Grid>
</Window>
